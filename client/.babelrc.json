{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "node": "current"
      }
    }],
    ["@babel/preset-react", {
      "runtime": "automatic"
    }]
  ],
  "plugins": [
    ["babel-plugin-module-resolver", {
      "alias": {
        "@components": "./src/components"
      }
    }]
  ]
}
